{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "commonjs",
        "target": "ES2017",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "types": [
            "node",
            "pg",
            "discord.io",
            "official-discord",
            "chrono-node",
            "moment",
            "moment-timezone",
            "phil"
        ],
        "typeRoots": ["node_modules/@types", "./types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/@types.ts"
    ]
}
